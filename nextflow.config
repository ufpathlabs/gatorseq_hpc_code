params 
	{
	human_ref_bwa= "/ufrc/chamala/share/ucsc_hg19/ucsc_hg19_without_halotypes_CRLF2_100bp_padded_chrY_masked_bwa_index/ucsc_hg19_without_halotypes_CRLF2_100bp_padded_chrY_masked_bwa"
