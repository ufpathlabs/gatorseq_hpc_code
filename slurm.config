
singularity {
    enabled = true
    cacheDir = "${params.Containers_Cache_Dir}"
}

process {
 withName: bwa_map_sort 
    {
        errorStrategy='retry'
        maxRetries=1
		executor='slurm'
		clusterOptions = "--no-requeue --account=ufmolpath --qos=ufmolpath --time=6:15:00 --mem-per-cpu=8gb --cpus-per-task=8  --ntasks=1 --nodes=1"
        container = "${params.DOCKER_BWA_SAMBAMBA}" 
        containerOptions = '--bind /etc/localtime,/etc/hosts,/orange,/blue'
   }

 withName: merging
    {
        errorStrategy='retry'
        maxRetries=1
        executor='slurm'
        clusterOptions = "--no-requeue --account=ufmolpath --qos=ufmolpath --time=6:15:00 --mem-per-cpu=8gb --cpus-per-task=8  --ntasks=1 --nodes=1"
        container = "${params.DOCKER_BWA_SAMBAMBA}" 
        containerOptions = '--bind /etc/localtime,/etc/hosts,/orange,/blue'

   }

 withName: vardict
    {
        errorStrategy='retry'
        maxRetries=0
        executor='slurm'
        clusterOptions = "--no-requeue --account=ufmolpath --qos=ufmolpath --time=6:15:00 --mem-per-cpu=8gb --cpus-per-task=8  --ntasks=1 --nodes=1"
        container = "${params.DOCKER_VARDICTJAVA}" 
        containerOptions = '--bind /etc/localtime,/etc/hosts,/orange,/blue'

   }

 withName: vepAnnot
    {
        errorStrategy='retry'
        maxRetries=1
        executor='slurm'
        clusterOptions = "--no-requeue --account=ufmolpath --qos=ufmolpath --time=6:15:00 --mem-per-cpu=8gb --cpus-per-task=1  --ntasks=1 --nodes=1"
        container = 'docker://harsh0280/vep:1.0'
        containerOptions = '--bind /etc/localtime,/etc/hosts,/orange,/blue'

   }

 withName: iCallSV
    {
        errorStrategy='retry'
        maxRetries=1
        executor='slurm'
        clusterOptions = "--no-requeue --account=ufmolpath --qos=ufmolpath --time=6:15:00 --mem-per-cpu=8gb --cpus-per-task=8  --ntasks=1 --nodes=1"
        container = "${params.DOCKER_ICALLSV}" 
